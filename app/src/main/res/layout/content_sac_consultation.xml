<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.pokemonteam.pokemon.controller.SacConsultation"
    tools:showIn="@layout/activity_sac_consultation">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/element_libelle"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pokeball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/element_libelle"
        android:id="@+id/element_nombre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_dark_material_dark"
        android:text="3"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
